{
  "name": "learning-web",
  "version": "0.1.0",
  "proxy": "https://learning-backend.herokuapp.com/",
  "description": "Front end application for learning-react",
  "engines": {
    "node": "8.15.1"
  },
  "author": "Akbar Basha KM",
  "private": true,
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-register": "^6.26.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.5.2",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "ignore-styles": "^5.0.1",
    "node-fetch": "^2.6.0",
    "path": "^0.12.7",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-helmet": "^5.2.0",
    "react-helmet-async": "^1.0.2",
    "react-lazyload": "^2.6.2",
    "react-loadable": "^5.5.0",
    "react-redux": "6.0.0",
    "react-router-dom": "^4.2.2",
    "react-router-last-location": "^2.0.1",
    "react-scripts": "2.0.5",
    "react-scroll": "^1.7.10",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "yarn": "^1.12.3"
  },
  "devDependencies": {
    "browser-sync": "^2.23.6",
    "lint-staged": "^7.2.0",
    "node-sass-chokidar": "^1.3.5",
    "react-bootstrap": "^1.0.0-beta.5",
    "sass": "^1.17.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint src -c .eslintrc --ext js,jsx"
    ],
    "src/**/*.{js,jsx,json,html,less}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "public/**/*.{html}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "server/**/*.{js,jsx,json,html}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "set-local": "cp .env.local .env",
    "set-prod": "cp .env.prod .env",
    "build": "yarn set-prod && yarn css && react-scripts build",
    "start": "NODE_ENV=production node server/bootstrap.js",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "public-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o public/",
    "css": "yarn build-css && yarn public-css",
    "local-start": "yarn set-local && react-scripts start",
    "public-sync": "yarn css && yarn browser-sync start -s --serveStatic 'public' --files 'public' --port 4000",
    "log": "heroku logs --tail -a learning-frontend",
    "backend-log": "heroku logs --tail -a learning-backend"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
